 {% extends "template/mail-base-order.template" %} 
 {% block orderDetails %}
<tr>
	<td align="left"
		style="font-family: sans-serif; font-size: 14px; vertical-align: top; padding-bottom: 15px;">
		<b>航程:</b>
	</td>
	<td align="left"
		style="font-family: sans-serif; font-size: 14px; vertical-align: top; padding-bottom: 15px;">
		{{airTransport.family}} {{airTransport.name}}&nbsp; <br>
		{{airTransport.flightRoute.departure}} &#8640 {{airTransport.flightRoute.arrival}}&nbsp; 
		{{date | datetimeformat('%Y-%m-%d') }} &nbsp; {{timeSlot}} 出发
	</td>
</tr>
<tr>
	<td align="left"
		style="font-family: sans-serif; font-size: 14px; vertical-align: top; padding-bottom: 15px;">
		<b>乘客:</b>
	</td>
	<td align="left"
		style="font-family: sans-serif; font-size: 14px; vertical-align: top; padding-bottom: 15px;">
		人数: {{passengerNum}} <br> 
		{% for passenger in passengers %} 
		姓名: {{passenger.name}} &nbsp; 身份证: {{passenger.identity}} <br> 
		{% endfor %}
	</td>
</tr>
<tr>
	<td align="left"
		style="font-family: sans-serif; font-size: 14px; vertical-align: top; padding-bottom: 15px;">
		<b>机型选择:</b>
	</td>
	<td align="left"
		style="font-family: sans-serif; font-size: 14px; vertical-align: top; padding-bottom: 15px;">
		{{aircraftType}}</td>
</tr>
{% endblock %}